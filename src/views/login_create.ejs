<%- include('header/header') %>

<section style="background: black; height-min: 100vh; height: auto; padding: 25px">
    <div class="mdl-card mdl-shadow--4dp" style="width: 50%; height: auto; margin: auto; ">
        <div class="mdl-card__title mdl-card--expand" style="margin-top: 25px">
            <h2 class="mdl-card__title-text">Register</h2>
            <% if(blankField) { %>
                <div class="demo-card-wide mdl-card mdl-shadow--2dp" style="background: red; width: 100%; height: 60px">
                    <p>ERROR</p>
                </div>
            <% } %>
        </div>
        
        <div class="mdl-card__supporting-text" style="width: auto">
            <form action="/login/create" method="POST">
                <div class="mdl-grid">
                    <div class="mdl-cell mdl-cell--6-col">
                        <div class="mdl-textfield mdl-js-textfield" style="width: 100%">
                            <input class="mdl-textfield__input" type="text" id="name" name="name" style="width: 100%">
                            <label class="mdl-textfield__label" for="name">Your Name</label>
                            <span class="mdl-textfield__error">Input is not a number!</span>
                        </div>
                    </div>
                    <div class="mdl-cell mdl-cell--6-col">
                        <div class="mdl-textfield mdl-js-textfield" style="width: 100%">
                            <input class="mdl-textfield__input" type="password" id="password" name="password" style="width: 100%">
                            <label class="mdl-textfield__label" for="password">Your Password</label>
                            <span class="mdl-textfield__error">Input is not a number!</span>
                        </div>
                    </div>
                </div>
                <div class="">
                    <div style="text-align: center">
                        <h5>Your Avatar</h5>
                    </div>
                    <ul class="mdl-list mdl-grid">

                        <% icons.forEach(function(icon, key) { %>
                            <li class="mdl-list__item mdl-cell mdl-cell--6-col">
                                <span class="mdl-list__item-primary-content">
                                        <div  class="material-icons  mdl-list__item-avatar" style="background: url('/img/icon/<%= icon %>') no-repeat;  background-position: center; background-size: 35px">
                                        </div>
                                    <%= icon %>
                                </span>
                                <span class="mdl-list__item-secondary-action">
                                    <label class="demo-list-radio mdl-radio mdl-js-radio mdl-js-ripple-effect" for="<%= key %>">
                                        <input type="radio" id="<%= key %>" class="mdl-radio__button" name="options" value="<%= icon %>"
                                            checked />
                                    </label>
                                </span>
                            </li>
                        <% }); %>
                    </ul>
                </div>
                <div class="mdl-card__supporting-text" style="width: 95%">    
                        <button style="width: 100%" type="submit" class="mdl-button mdl-js-button mdl-button--primary">
                            Save
                        </button>
                    </div>
            </form>
        </div>
        
    </div>
</section>

<script src="/vendor/jquery/jquery.min.js"></script>
<script src="/vendor/popper/popper.min.js"></script>

<%- include('footer/footer') %>